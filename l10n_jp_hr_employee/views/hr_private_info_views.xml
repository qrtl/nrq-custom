<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="act_hr_employee_2_hr_private_info" model="ir.actions.act_window">
        <field name="name">Private Info</field>
        <field name="res_model">hr.private.info</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_employee_id': active_id}</field>
    </record>

    <record id="act_hr_private_info" model="ir.actions.act_window">
        <field name="name">Private Info</field>
        <field name="res_model">hr.private.info</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_hr_private_info_form" model="ir.ui.view">
        <field name="name">view.hr.private.info.form</field>
        <field name="model">hr.private.info</field>
        <field name="arch" type="xml">
            <form string="Private Info">
                <header>
                    <button name="action_ready" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('is_ready','=',True)]}" string="Get Ready to Submit" class="oe_highlight"/>
                    <button name="action_submit" type="object" attrs="{'invisible': ['|',('state','!=','draft'),('is_ready','=',False)]}" string="Submit" class="oe_highlight"/>
                    <button name="action_confirm" type="object" states="submit" string="Confirm" class="oe_highlight"/>
                    <button name="action_draft" type="object" states="submit,confirm" string="Set to Draft"/>
                    <field name="state" widget="statusbar" clickable="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('employee_id', '!=', False)]}"/>
                            <label for="family_name" string="Name"/>
                            <div>
                                <div class="o_row mr16">
                                    <field name="family_name" placeholder="Family Name"/>
                                    <field name="given_name" placeholder="Given Name"/>
                                </div>
                            </div>
                            <label for="furi_family_name" string="Name Furigana"/>
                            <div>
                                <div class="o_row mr16">
                                    <field name="furi_family_name" placeholder="Family Name"/>
                                    <field name="furi_given_name" placeholder="Given Name"/>
                                </div>
                            </div>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="is_ready"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information" name="information">
                            <group>
                                <group name="particulars" string="Personal Particulars">
                                    <field name="private_country_id" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <label for="roman_family_name" string="Roman Spelling"/>
                                    <div>
                                        <div class="o_row mr16">
                                            <field name="roman_family_name" placeholder="Family Name" attrs="{'required':[('is_ready','=',True)]}"/>
                                            <field name="roman_given_name" placeholder="Given Name" attrs="{'required':[('is_ready','=',True)]}"/>
                                        </div>
                                    </div>
                                    <field name="birthday" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="gender" widget="radio" options="{'horizontal': true}" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="private_phone" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="private_email" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <label for="address_street" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <div class="o_address_format">
                                        <div class="o_row mr16">
                                            <field name="postal_code" placeholder="Postal Code" attrs="{'required':[('is_ready','=',True)]}"/>
                                            <field name="address_pref" placeholder="Prefecture" attrs="{'required':[('is_ready','=',True)]}"/>
                                        </div>
                                        <field name="address_street" placeholder="City and Street" class="o_address_street" attrs="{'required':[('is_ready','=',True)]}"/>
                                        <field name="building" placeholder="Apartment/Building" class="o_address_street"/>
                                    </div>
                                    <label for="address_furigana"/>
                                    <div class="o_address_format">
                                        <field name="furi_address" placeholder="Furigana for City and Street" class="o_address_street"/>
                                        <field name="furi_building" placeholder="Furigana for Apartment/Building" class="o_address_street"/>
                                    </div>
                                    <field name="residence_cert" filename="residence_cert_filename"/>
                                    <field name="residence_cert_filename" invisible="1"/>
                                </group>
                                <group name="emerg_contact" string="Emergency Contact">
                                    <label for="emerg_contact_type"/>
                                    <div>
                                        <div class="o_row mr16">
                                            <field name="emerg_contact_type" attrs="{'required':[('is_ready','=',True)]}"/>
                                            <field name="emerg_contact_desc" attrs="{'invisible': [('emerg_contact_type','!=','other')],'required':[('emerg_contact_type','=','other'),('is_ready','=',True)]}"/>
                                        </div>
                                    </div>
                                    <field name="emerg_contact_name" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="emerg_contact_postal_code"/>
                                    <field name="emerg_contact_address"/>
                                    <field name="emerg_contact_phone" attrs="{'required':[('is_ready','=',True)]}"/>
                                </group>
                                <group name="bank_info" string="Bank Info">
                                    <field name="bank_id" options='{"no_open": True, "no_create": True}' attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="bank_branch" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="bank_acc_type" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="bank_acc_number" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="bank_acc_holder" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="furi_bank_acc_holder" attrs="{'required':[('is_ready','=',True)]}"/>
                                </group>
                                <group name="academic_background" string="Final Academic Background">
                                    <field name="school_name" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="school_dept_name" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="school_completion" widget="radio" options="{'horizontal': true}" attrs="{'required':[('is_ready','=',True)]}"/>
                                    <field name="school_completion_desc"/>
                                    <field name="year_left_school"/>
                                </group>
                            </group>
                            <group name="qualification" string="Qualifications">
                                <field name="qualification_ids"/>
                            </group>
                            <group>
                                <group name="pension_info" string="Pension Info">
                                    <field name="pension_number"/>
                                </group>
                                <group name="employment_info" string="Employment Info">
                                    <field name="employment_ins_number" attrs="{'required':[('is_ready','=',True)]}"/>
                                </group>
                                <group name="classification" string="Classifictions">
                                    <field name="disability_class_id" widget="selection"/>
                                    <field name="widowhood"/>
                                    <field name="working_student_deduction"/>
                                    <field name="note"/>
                                </group>
                                <group name="visa_info" string="Visa Info">
                                    <field name="visa_number"/>
                                    <field name="date_visa_expiry"/>
                                    <field name="work_permit_number"/>
                                    <field name="residence_card" filename="residence_card_filename"/>
                                    <field name="residence_card_filename" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="health_insurance" string="Health Insurance">
                            <field name="dependant_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hr_private_info_tree" model="ir.ui.view">
        <field name="name">view.hr.private.info.tree</field>
        <field name="model">hr.private.info</field>
        <field name="arch" type="xml">
            <tree string="Private Info">
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_private_info_search" model="ir.ui.view">
        <field name="name">hr.private.info.search</field>
        <field name="model">hr.private.info</field>
        <field name="arch" type="xml">
            <search string="Search Private Info">
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <menuitem
        id="menu_open_view_private_invo"
        action="act_hr_private_info"
        parent="hr.menu_hr_root"
        sequence="4"
        groups="hr.group_hr_manager"/>

</odoo>
