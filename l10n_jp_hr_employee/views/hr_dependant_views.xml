<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_dependant_form" model="ir.ui.view">
        <field name="name">view.hr.dependant.form</field>
        <field name="model">hr.dependant</field>
        <field name="arch" type="xml">
            <form string="Dependants">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dependant_categ"/>
                        <field name="gender"/>
                        <field name="birthday"/>
                        <field name="residence_categ"/>
                        <field name="postal_code"/>
                        <field name="address"/>
                        <field name="address_furigana"/>
                        <field name="phone"/>
                        <field name="occupation"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="income"/>
                        <field name="earnings"/>
                        <field name="amt_to_family"/>
                        <field name="disability_class_id" widget="selection"/>
                        <field name="disability_note" attrs="{'invisible': [('disability_class_id', '=', False)]}"/>
                        <field name="is_dependant_tax"/>
                        <field name="date_dependant_enter"/>
                        <field name="cause_dependant_enter"/>
                        <field name="cause_dependant_enter_note" attrs="{'invisible': [('cause_dependant_enter', '=', '5_other')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dependant_tree" model="ir.ui.view">
        <field name="name">view.hr.dependant.tree</field>
        <field name="model">hr.dependant</field>
        <field name="arch" type="xml">
            <tree string="Dependants">
                <field name="name"/>
                <field name="dependant_categ"/>
                <field name="birthday"/>
            </tree>
        </field>
    </record>

    <record id="hr_dependant_search" model="ir.ui.view">
        <field name="name">hr.dependant.search</field>
        <field name="model">hr.dependant</field>
        <field name="arch" type="xml">
            <search string="Search Dependants">
                <field name="name"/>
                <field name="employee_id"/>
            </search>
        </field>
    </record>

</odoo>
