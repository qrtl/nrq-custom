<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_2_hr_private_info)d"
                    class="oe_stat_button"
                    icon="fa-user-secret"
                    type="action">
                    <field name="private_info_count" widget="statinfo" string="Private Info"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='address_id']" position="before">
                <field name="name_furigana"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="before">
                <field name="code"/>
                <field name="employment_type_id" widget="selection"/>
            </xpath>
        </field>
    </record>

</odoo>
