<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">view.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="contract" />
            </xpath>
        </field>
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="contract" />
            </xpath>
        </field>
    </record>
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">view.quotation.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="contract" />
            </xpath>
        </field>
    </record>
    <record id="sale_order_view_search_inherit_quotation" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <separator />
                <filter
                    string="Contract Agreement"
                    name="contract_agreement"
                    domain="[('contract','=','cont')]"
                />
                <filter
                    string="Quasi-mandate"
                    name="quasi_mandate"
                    domain="[('contract','=','quasi')]"
                />
                <filter
                    string="Temporary"
                    name="contract_agreement"
                    domain="[('contract','=','temp')]"
                />
            </xpath>
        </field>
    </record>
</odoo>
