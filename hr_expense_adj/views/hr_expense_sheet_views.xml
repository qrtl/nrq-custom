<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='approve_expense_sheets']" position="replace">
                <button name="action_approve_ok" type="object" attrs="{'invisible':['|',('ready_to_approve','=',True), ('state', '!=', 'submit')]}" string="OK to Approve" class="oe_highlight" />
                <button name="approve_expense_sheets" states="submit" string="Approve" type="object" groups="hr_expense.group_hr_expense_user" class="oe_highlight o_expense_sheet_approve" attrs="{'invisible':['|',('ready_to_approve','=',False)]}" />
                <button name="action_approve_ng" type="object" attrs="{'invisible':['|',('ready_to_approve','=',False), ('state', '!=', 'submit')]}" string="NG to Approve" />
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">date,id</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='date']" position="before">
                <field name="number"/>
            </xpath>
            <xpath expr="//tree/field[@name='date']" position="after">
                <field name="product_id"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="reference" string="Reference"/>
            </xpath>
            <xpath expr="//tree/field[@name='tax_ids']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='total_amount']" position="after">
                <field name="description"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="before">
                <field name="ready_to_approve"/>
            </xpath>
        </field>
    </record>

</odoo>
